10 REM *** BASIC FEATURES DEMONSTRATION PROGRAM ***
20 REM *** WRITTEN FOR CLASSIC LINE-NUMBERED BASIC ***
30 REM *** DEMONSTRATES VARIABLES, CONDITIONALS, LOOPS, ARRAYS, AND SUBROUTINES ***
40 PRINT "BASIC LANGUAGE FEATURE DEMONSTRATION"
50 PRINT "===================================="
60 PRINT

100 REM *** VARIABLE ASSIGNMENT ***
110 LET A = 5
120 B = 10        : REM IMPLICIT ASSIGNMENT WITHOUT LET
130 C$ = "HELLO"  : REM STRING VARIABLE WITH $ SUFFIX
140 PRINT "VARIABLES:"
150 PRINT "A = "; A
160 PRINT "B = "; B
170 PRINT "C$ = "; C$
180 PRINT

200 REM *** BASIC ARITHMETIC ***
210 PRINT "ARITHMETIC OPERATIONS:"
220 PRINT "A + B = "; A + B
230 PRINT "B - A = "; B - A
240 PRINT "A * B = "; A * B
250 PRINT "B / A = "; B / A
260 PRINT "B ^ A = "; B ^ A    : REM EXPONENTIATION
270 PRINT "INT(7/2) = "; INT(7/2)  : REM INTEGER DIVISION
280 PRINT

300 REM *** CONDITIONAL STATEMENTS ***
310 PRINT "CONDITIONAL STATEMENTS:"
320 IF A > B THEN PRINT "A IS GREATER THAN B" ELSE GOTO 340
330 GOTO 350
340 PRINT "A IS NOT GREATER THAN B"
350 PRINT

400 REM *** ARRAYS ***
410 PRINT "ARRAYS:"
420 DIM ARR(5)    : REM DEFINE AN ARRAY OF SIZE 5
430 FOR I = 1 TO 5
440   ARR(I) = I * 10
450   PRINT "ARR("; I; ") = "; ARR(I)
460 NEXT I
470 PRINT

500 REM *** FOR-NEXT LOOPS ***
510 PRINT "FOR-NEXT LOOP WITH STEP:"
520 FOR J = 10 TO 2 STEP -2
530   PRINT "J = "; J
540 NEXT J
550 PRINT

600 REM *** WHILE-WEND EQUIVALENT (USING GOTO) ***
610 PRINT "WHILE LOOP EQUIVALENT:"
620 K = 1
630 IF K > 5 THEN GOTO 670
640   PRINT "K = "; K
650   K = K + 1
660 GOTO 630
670 PRINT

700 REM *** STRING OPERATIONS ***
710 PRINT "STRING OPERATIONS:"
720 FIRST$ = "BASIC"
730 LAST$ = "PROGRAMMING"
740 FULL$ = FIRST$ + " " + LAST$  : REM CONCATENATION
750 PRINT "CONCATENATION: "; FULL$
760 PRINT "STRING LENGTH: "; LEN(FULL$)
770 PRINT "SUBSTRING: "; MID$(FULL$, 7, 4)  : REM EXTRACT 4 CHARS STARTING AT POSITION 7
780 PRINT "UPPERCASE: "; FULL$  : REM MANY BASIC DIALECTS ONLY HAVE UPPERCASE
790 PRINT

800 REM *** GOSUB AND RETURN (SUBROUTINES) ***
810 PRINT "SUBROUTINE DEMONSTRATION:"
820 N = 4
830 GOSUB 2000    : REM CALL FACTORIAL SUBROUTINE
840 PRINT N; "! = "; FACT
850 PRINT

900 REM *** INPUT FROM USER ***
910 PRINT "USER INPUT:"
920 INPUT "ENTER YOUR NAME: "; NAME$
930 PRINT "HELLO, "; NAME$
940 INPUT "ENTER A NUMBER: "; NUM
950 PRINT "YOUR NUMBER SQUARED IS: "; NUM * NUM
960 PRINT

1000 REM *** DATA AND READ STATEMENTS ***
1010 PRINT "DATA AND READ STATEMENTS:"
1020 READ D1, D2, D3$
1030 PRINT "READ VALUES: "; D1; ", "; D2; ", "; D3$
1040 DATA 42, 3.14, BASIC
1050 PRINT

1100 REM *** ERROR HANDLING (SIMPLE VERSION) ***
1110 PRINT "ERROR HANDLING:"
1120 ON ERROR GOTO 1150  : REM NOT SUPPORTED IN ALL BASIC VERSIONS
1130 X = 1/0             : REM DELIBERATE ERROR
1140 GOTO 1160
1150 PRINT "ERROR CAUGHT: DIVISION BY ZERO"
1160 PRINT

1900 PRINT "PROGRAM COMPLETED"
1910 END

2000 REM *** FACTORIAL SUBROUTINE ***
2010 IF N <= 1 THEN FACT = 1 : RETURN
2020 N1 = N
2030 FACT = 1
2040 FOR I = 1 TO N1
2050   FACT = FACT * I
2060 NEXT I
2070 RETURN
